
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr" dir="ltr">
<head>
    <meta charset="utf-8">
    <title>Transparent Login Form UI</title>
    <link rel="stylesheet" href="/Transparent Login Form UI/style.css">
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
</head>
<body>

    @if (TempData["ResetPasswordSuccessMsg"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>BİLGİ!</strong> @TempData["ResetPasswordSuccessMsg"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        <br />
    }


    @if (TempData["ResetPasswordFailMsg"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>DİKKAT!</strong> @TempData["ResetPasswordFailMsg"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        <br />
    }
    @if (TempData["ForgotPasswordSuccessMsg"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>BİLGİ!</strong> @TempData["ForgotPasswordSuccessMsg"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        <br />
    }


    @if (TempData["ForgotPasswordFailMsg"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>DİKKAT!</strong> @TempData["ForgotPasswordFailMsg"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        <br />
    }


    @if (TempData["ActivationFailMsg"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>DİKKAT!</strong> @TempData["ActivationFailMsg"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        <br />
    }




    @if (TempData["ActivationSuccessMsg"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>BİLGİ!</strong> @TempData["ActivationSuccessMsg"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        <br />
    }


    @if (TempData["RegisterFailMsg"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>HATA!</strong> @TempData["RegisterFailMsg"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        <br />
    }
    @if (TempData["RegisterSuccessMsg"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>BİLGİ!</strong> @TempData["RegisterSuccessMsg"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        <br />
    }

    <div class="bg-img">
        <div class="content">
            <div asp-validation-summary="All" class="text-danger"></div>

            <header>GİRİŞ YAP</header>
            <form class="form" asp-controller="Account" asp-action="Login" method="post">
                <div class="field">
                    <span class="fa fa-user"></span>
                    <input type="text" required placeholder="Email" name="email" asp-for="@Model" />
                </div>
                <div class="field space">
                    <span class="fa fa-lock"></span>
                    <input type="password" class="pass-key" required placeholder="Şifre" name="password" />
                    <span class="show">SHOW</span>
                </div>
                <div class="pass">
                    <a asp-controller="Account" asp-action="ForgotPassword">Şifremi Unuttum</a>
                </div>
                <div class="field">
                    <input type="submit" value="Giriş Yap" />
                </div>
            </form>

            <div class="signup">
                Henüz bir hesabın yok mu?
                <a asp-controller="Account" asp-action="Register">Kayıt Ol</a>
            </div>
        </div>
    </div>

    <script>
        const pass_field = document.querySelector('.pass-key');
        const showBtn = document.querySelector('.show');
        showBtn.addEventListener('click', function(){
         if(pass_field.type === "password"){
           pass_field.type = "text";
           showBtn.textContent = "HIDE";
           showBtn.style.color = "#3498db";
         }else{
           pass_field.type = "password";
           showBtn.textContent = "SHOW";
           showBtn.style.color = "#222";
         }
        });
    </script>


</body>
</html>

